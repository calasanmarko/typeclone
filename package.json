    "types",
    "clone",
    "compiler",
    "transpiler",
    "declaration",
    "utility",
    "build"
  ],
  "author": "Marko Calasan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/calasanmarko/typeclone/issues"
  },
  "homepage": "https://github.com/calasanmarko/typeclone#readme",
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.4"
  }
}
